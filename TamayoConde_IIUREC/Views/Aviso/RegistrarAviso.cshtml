
@{
    ViewBag.Title = "RegistrarAviso";
}

<h2>RegistrarAviso</h2>


<div class="row">

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">DATOS AvisoS</h3>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("RegistrarAviso", "Aviso", FormMethod.Post,new { enctype = "multipart/form-data" }))
                {
                <div class="row">
                    <input type="hidden" name="categoria_id" value="@ViewBag.categoria_id" />
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label>NOMBRE</label>
                            <input type="text" name="nombre" class="form-control" value="" required />
                        </div>
                    </div>
                    <div class="col-lg-8">
                        <div class="form-group">
                            <label>DESCRIPCION</label>
                            <input type="text" name="descripcion" class="form-control" value="" required />
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="form-group">
                            <label>TIPO</label>
                            <select class="form-control" name="tipo" required>
                                <option value="IMAGEN">IMAGEN</option>
                                <option value="VIDEO">VIDEO</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="form-group">
                            <label>IMAGEN/VIDEO</label>
                            <input type="file" name="fileimagen" class="form-control" value="" required />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4">
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Registrar</button>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
</div>