
@{
    ViewBag.Title = "EditarAviso";
}

<h2>EditarAviso</h2>


<div class="row">

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">DATOS AVISO</h3>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("EditarAviso", "Aviso", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="row">
                        <input type="hidden" name="categoria_id" value="@ViewBag.aviso.categoria_id" />
                        <input type="hidden" name="aviso_id" value="@ViewBag.aviso.aviso_id" />
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label>NOMBRE</label>
                                <input type="text" name="nombre" class="form-control" value="@ViewBag.aviso.nombre" required />
                            </div>
                        </div>
                        <div class="col-lg-8">
                            <div class="form-group">
                                <label>DESCRIPCION</label>
                                <input type="text" name="descripcion" class="form-control" value="@ViewBag.aviso.descripcion" required />
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <div class="form-group">
                                <label>TIPO</label>
                                <select class="form-control" name="tipo" required>
                                    <option value="IMAGEN" @(ViewBag.aviso.tipo == "IMAGEN" ? "selected" : "")>IMAGEN</option>
                                    <option value="VIDEO" @(ViewBag.aviso.tipo == "VIDEO" ? "selected" : "")>VIDEO</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <div class="form-group">
                                <label>IMAGEN/VIDEO</label>
                                <input type="file" name="fileimagen" class="form-control" value="" required />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Editar</button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>