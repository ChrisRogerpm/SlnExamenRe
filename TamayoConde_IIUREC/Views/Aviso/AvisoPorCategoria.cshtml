
@{
    ViewBag.Title = "Index";
}

<h2>LISTA DE AVISO POR CATEGORIA</h2>


<div class="row">

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">CATEGORIAS</h3>
            </div>
            <div class="card-body">

                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>CATEGORIA</th>
                            <th>CANTIDAD</th>
                            <th>PORCENTAJE</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.listarAvisoCategoria)
                        {
                        <tr>
                            <td>@item.nombre</td>
                            <td>@item.cantidadAvisos</td>
                            <td>@item.descripcion</td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>


</div>

@section js{

    <script>
        $(document).ready(function () {

            $(document).on('change', '.estadoCategoria', function () {
                let categoria_id = $(this).data('id');
                let estado = $(this).find('option:selected').val();
                $.ajax({
                    type: 'POST',
                    url: "/Categoria/ActualizarEstadoCategoria",
                    data: {
                        categoria_id: categoria_id,
                        estado: estado
                    },
                    success: function (response) {
                        if (response.respuesta) {
                            alert('Se ha actualizado satisfactoriamente');
                        }
                    }
                })
            });
        });

    </script>

}
