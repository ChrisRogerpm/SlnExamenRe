
@{
    ViewBag.Title = "RegistrarCategoria";
}

<h2>RegistrarCategoria</h2>


<div class="row">

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">DATOS CATEGORIAS</h3>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("RegistrarCategoria", "Categoria", FormMethod.Post))
                {
                <div class="row">
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label>NOMBRE</label>
                            <input type="text" name="nombre" class="form-control" value="" required />
                        </div>
                    </div>
                    <div class="col-lg-8">
                        <div class="form-group">
                            <label>DESCRIPCION</label>
                            <input type="text" name="descripcion" class="form-control" value="" required />
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <button type="submit" class="btn btn-sm btn-primary">Registrar</button>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
</div>